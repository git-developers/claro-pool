{% spaceless %}
    <div class="modal modal-danger fade in" id="{{ crud.modal_unsolicitar_carrera_id }}">
        <div class="modal-dialog {{ crud.modal_empezar_carrera_size }}">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">Ã—</span>
                    </button>
                    <h4 class="modal-title">
                        <i class="fa fa-fw fa-play"></i> Anular Carrera
                        <small class="label label-primary" style="font-size: 65%;"></small>
                        <i class="fa fa-refresh fa-spin" style="color: white; margin-left: 10px; display:none"></i>
                    </h4>
                </div>

                <form name="{{ crud.form_unsolicitar_carrera_name }}" method="post">
                    <input type="hidden" class="{{ crud.form_input_id }}" name="id">
                    <div class="modal-body">
                        <div id="message" class="callout callout-danger" style="display: none;">
                            <p></p>
                        </div>
                        <p>Esta seguro ?</p>
                        {#{{ crud.text.delete|trans|raw }}#}


                        <div class="form-group has-feedback">
                            <label class="" for="update_profile_profile">Motivo:</label>
                            <select id="update_profile_profile" name="" class="form-control" required>
                                <option value="3">[ seleccione motivo ]</option>
                                <option value="3">Motivo 1</option>
                                <option value="3">Motivo 2</option>
                                <option value="3">Motivo 3</option>
                                <option value="3">Motivo 4</option>
                            </select>
                            <span class="glyphicon glyphicon-user form-control-feedback"></span>
                        </div>

                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-outline pull-left" data-dismiss="modal">Cerrar</button>
                        <button type="submit" class="btn btn-outline">Anular Carrera</button>
                    </div>
                </form>

            </div>
        </div>
    </div>
{% endspaceless %}