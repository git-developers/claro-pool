{#Left side column. contains the logo and sidebar#}
<aside class="main-sidebar" style="background-color: #37474F">

    {#sidebar: style can be found in sidebar.less#}
    <section class="sidebar">

        {#Sidebar user panel#}
        {% if app.user is not null %}
            <div class="user-panel">
                <div class="pull-left image">
                    <img
                        src="{{ asset('bundles/app/main-assets/dist/img/user2-160x160.jpg')}}"
                        {#src="{{ image_avatar }}"#}
                        class="img-circle x-hand"
                        alt="{{ app.user.name }} {{ app.user.lastName }}"
                        >
                    {#onclick="location.href='{{ path('frontend_profile_index', {slug:app.user.slug}) }}';"#}
                </div>
                <div class="pull-left info">
                    <p>{{ app.user.name ~ ' ' ~ app.user.lastName }}</p>
                    <a href="#">
                        <i class="fa fa-circle text-success"></i> Online
                    </a>
                </div>
            </div>
        {% endif %}

        {#search form#}
        <form id="search-box-sidebar" action="#" method="get" class="sidebar-form" >
            <div class="input-group">
                <input type="text" name="q" class="form-control" placeholder="Buscar..." style="background-color: white">
                <span class="input-group-btn">
                <button type="submit" name="search" id="search-btn" class="btn btn-flat">
                    <i class="fa fa-search"></i>
                </button>
              </span>
            </div>
        </form>

        {#{{ path('backend_googledrive_index', {id:'my-drive'}) }}#}
        {#sidebar menu: : style can be found in sidebar.less#}
        <ul class="sidebar-menu">

            <li class="header">MENU PRINCIPAL</li>

            <li class="treeview {% if app.request.get('_route') matches '(app_role)' %}active{% endif %}">
                <a href="{{ path('app_role_index') }}">
                    <i class="fa fa-expeditedssl"></i>
                    <span>Gestionar role</span>
                </a>
            </li>

            <li class="treeview {% if app.request.get('_route') matches '(app_profile)' %}active{% endif %}">
                <a href="{{ path('app_profile_index') }}">
                    <i class="fa fa-expeditedssl"></i>
                    <span>Gestionar profile</span>
                </a>
            </li>

            <li class="treeview {% if app.request.get('_route') matches '(app_user)' %}active{% endif %}">
                <a href="{{ path('app_user_index') }}">
                    <i class="fa fa-user"></i>
                    <span>Gestionar usuarios</span>
                </a>
            </li>


            {% if 'ROLE_CONDUCTOR' in app.user.roles %}

                <li class="header">CONDUCTOR</li>

                <li class="treeview {% if app.request.get('_route') matches '(app_route)' %}active{% endif %}">
                    <a href="{{ path('app_route_conductor_index') }}">
                        <i class="fa fa-home"></i>
                        <span>Gestionar rutas</span>
                    </a>
                </li>
            {% endif %}


            {#{% if is_granted('ROLE_PASAJERO') %}#}
            {% if 'ROLE_PASAJERO' in app.user.roles %}

                <li class="header">PASAJERO</li>

                <li class="treeview {% if app.request.get('_route') matches '(app_route)' %}active{% endif %}">
                    <a href="{{ path('app_route_pasajero_index') }}">
                        <i class="fa fa-home"></i>
                        <span>Gestionar rutas</span>
                    </a>
                </li>

            {% endif %}

            <li class="treeview {% if app.request.get('_route') matches '(app_route)' %}active{% endif %}">
                <a href="{{ path('app_user_edit_user') }}">
                    <i class="fa fa-user"></i>
                    <span>Editar perfil</span>
                </a>
            </li>

        </ul>

    </section>

</aside>